{
    "manifest_version": 2,

    "name": "CitrusZenSaver",
    "description": "Сохранение ссылок",
    "version": "0.1.2",

    "icons": { "16": "icon16.png",
               "48": "icon48.png",
               "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "https://*/*",
        "http://*/*"
    ]
}
